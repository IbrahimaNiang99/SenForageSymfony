{% extends 'accueil.html.twig' %}


{% block title %}  {% endblock %}


{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h4>Liste des clients</h4>
        </div>
        <div class="col-md-2 offset-7">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal"> <i class="fa fa-plus"></i> Ajouter client</button>
        </div>
    </div>
</div>


<div class="container mt-2">
    <table class="table table-striped">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Nom client</th>
            <th scope="col">Adresse</th>
            <th scope="col">Téléphone</th>
            <th scope="col">Village</th>
            <th scope="col">Modifier</th>
            <th scope="col">Supprimer</th>
            </tr>
        </thead>
    <tbody>
    {% for c in clients %}
        <tr>
        <th scope="row">{{c.id}}</th>
        <td>{{c.nom}}</td>
        <td>{{c.adresse}}</td>
        <td>{{c.telephone}}</td>
        <td>{{c.villages}}</td>
        <td><a href="#" class="btn btn-warning"> <i class="fa fa-edit"></i>   </a></td>
        <td><a href="#" class="btn btn-danger">  <i class="fa fa-trash"></i>    </a></td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
</div>

<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Formulaire d'ajout de client</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{ form(form) }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}
